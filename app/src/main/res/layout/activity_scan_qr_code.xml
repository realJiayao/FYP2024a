<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FF6B00"
    tools:context=".Scan_QR_Code_Activity">

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="8dp"
        android:layout_marginBottom="8dp"
        android:background="#FF6B00"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="#FF6B00"
            android:padding="4dp">

            <ImageView
                android:id="@+id/header_image_Scan_QR"
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:layout_marginStart="8dp"
                android:layout_marginTop="8dp"
                android:layout_marginEnd="8dp"
                android:layout_marginBottom="8dp"
                android:background="#FBD472"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"  />



            <ImageView
                android:id="@+id/Title_image_Scan_QR"
                android:layout_width="120dp"
                android:layout_height="120dp"
                android:layout_marginTop="8dp"
                android:radius="12dp"
                app:layout_constraintEnd_toEndOf="@+id/header_image_Scan_QR"
                app:layout_constraintStart_toStartOf="@+id/header_image_Scan_QR"
                app:layout_constraintTop_toTopOf="@+id/header_image_Scan_QR"
                app:srcCompat="@mipmap/ic_launcher_foreground" />



            <TextView
                android:id="@+id/app_title_Scan_QR"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:text="@string/front_title"
                app:layout_constraintEnd_toEndOf="@+id/header_image_Scan_QR"
                app:layout_constraintStart_toStartOf="@+id/header_image_Scan_QR"
                app:layout_constraintTop_toBottomOf="@+id/Title_image_Scan_QR" />


            <!--            <ImageView-->
<!--                android:id="@+id/imageView"-->
<!--                android:layout_width="wrap_content"-->
<!--                android:layout_height="wrap_content"-->
<!--                android:layout_marginTop="16dp"-->
<!--                app:layout_constraintEnd_toEndOf="@+id/header_image"-->
<!--                app:layout_constraintStart_toStartOf="@+id/header_image"-->
<!--                app:layout_constraintTop_toBottomOf="@+id/app_title_home"-->
<!--                tools:srcCompat="@tools:sample/avatars" />-->

            <Button
                android:id="@+id/Scan_QR_Btn"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="8dp"
                android:text="Scan QR Code"
                app:layout_constraintBottom_toTopOf="@+id/Scan_QR_BackBtn"
                app:layout_constraintEnd_toEndOf="@+id/header_image_Scan_QR"
                app:layout_constraintHorizontal_bias="0.497"
                app:layout_constraintStart_toStartOf="@+id/header_image_Scan_QR" />

            <Button
                android:id="@+id/Scan_QR_BackBtn"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginBottom="24dp"
                android:onClick="Scan_QR_Code_BackBtn"
                android:text="Back"
                app:layout_constraintBottom_toBottomOf="@+id/header_image_Scan_QR"
                app:layout_constraintEnd_toEndOf="@+id/Scan_QR_Btn"
                app:layout_constraintHorizontal_bias="0.0"
                app:layout_constraintStart_toStartOf="@+id/Scan_QR_Btn" />

            <TextView
                android:id="@+id/Validation_checker"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="16dp"
                android:layout_marginTop="16dp"
                android:layout_marginEnd="16dp"
                android:text="TextView"
                android:textAlignment="center"
                app:layout_constraintEnd_toEndOf="@+id/header_image_Scan_QR"
                app:layout_constraintHorizontal_bias="0.496"
                app:layout_constraintStart_toStartOf="@+id/header_image_Scan_QR"
                app:layout_constraintTop_toBottomOf="@+id/QR_Code_Result" />

            <TextView
                android:id="@+id/QR_Code_Result"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="16dp"
                android:layout_marginTop="16dp"
                android:layout_marginEnd="16dp"
                android:text="TextView"
                android:textAlignment="center"
                app:layout_constraintEnd_toEndOf="@+id/header_image_Scan_QR"
                app:layout_constraintHorizontal_bias="0.497"
                app:layout_constraintStart_toStartOf="@+id/header_image_Scan_QR"
                app:layout_constraintTop_toBottomOf="@+id/app_title_Scan_QR" />


        </androidx.constraintlayout.widget.ConstraintLayout>
    </androidx.cardview.widget.CardView>




</androidx.constraintlayout.widget.ConstraintLayout>